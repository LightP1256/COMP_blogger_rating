<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta charset="utf-8" />
    <title>Basic Blogs</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- CSS -->
    <link href="/main.css" rel="stylesheet" />
    <link href="/message.css" rel="stylesheet" />
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- jQuery Plugins-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.form/4.3.0/jquery.form.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
    <!-- Web Socket -->
    <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
    <!-- Bootstrap jQuery Plugins-->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
            integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
            integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <!-- Classes -->
    <script src="models/User.js"></script>
    <script src="models/Admin.js"></script>
    <script src="models/Topic.js"></script>
    <script src="models/Blog.js"></script>
    <!-- JavaScript -->
    <script async src="controller/apiCalls.js"></script>
    <script async src="controller/main.js"></script>
    <script async src="controller/message.js"></script>
    <script src="controller/toggle.js" defer></script>

</head>
<body>
<!-- Header -->
<div class="container-fluid">
    <div class="container-fluid header">
        <div class="row headerLink">
            <div class="col">
                <a href="main"><img src="/icon-logo.png" alt="logo"/></a>
            </div>
            <div class="col">
                <input type="checkbox" class="checkbox" id="checkbox">
                <label for="checkbox" class="label">
                    <div class="ball"></div>
                    <img src="/icon-moon.png" alt="moon" class="moon">
                    <img src="/icon-sun.png" alt="sun" class="sun">
                </label>
            </div>
            <div class="col">
                <a href="account"><h4 style="text-align: right;">My Account</h4></a>
                <a id="btnLogout" href="#"><h5 style="text-align: right">Logout</h5></a>
            </div>
        </div>
    </div>
</div>
<!-- Topics section -->
<div class="row margin">
    <div class="col-2 outline">
        <div class="container-fluid">
            <table class="table table-bordered table-hover">
                <tbody id="topics">
                <a><h3 style="text-align: center;">Topics</h3></a>
                <% for(i = 0; i < topics.length; i++){ %>
                    <tr><td id="<%= topics[i].topicID %>"><%= topics[i].topicName %></td></tr>
                <% } %>
                </tbody>
            </table>
            <button id="btnNewTopic" class="btn btn-outline-primary btn-block" hidden>New Topic</button>
        </div>
    </div>
    <div class="col-8 outline">
        <div class="container description">
            <h3 id="topicName"></h3>
            <div class="container" id="description">
                <p id="topicDescription"></p>
            </div>
        </div>
        <div class="row margin" style="height: 100vh; border: black solid">
            <a><h3 style="text-align: center;">Blogs</h3></a>
            <div id="blogs" class="col overflow-auto" style="height: 100%">
                <% for(j = 0; j < blogs.length; j++) { %>
                    <div class="card margin" id="topic<%= blogs[j].topicID %>" hidden>
                        <div class="card-body blogsCards">
                            <p style="margin:0.5rem" id="blog<%= blogs[j].blogID %>"><%= blogs[j].title %></p>
                        </div>
                    </div>
                <% } %>
                <button id="btnNewBlog" class="btn btn-outline-primary btn-block" hidden>Upload Blog</button>
            </div>
        </div>
    </div>
    <div class="col-2 outline">
        <div class="container text-center" style="height: 110vh">
            <h3>Web Chat</h3>
            <div class="container outline overflow-auto" id="msgOutput" style="height: 80%">
            </div>
            <div class="input-group marginTop flex-wrap">
                <input type="text" id="inpMessage" style="width: 100%" />
            </div>
            <button id="send" class="btn btn-primary" style="margin-top: 1rem">Send</button>
        </div>
    </div>
</div>
<!-- Adding new topic (popup only admins) -->
<div class="modal" id="newTopic" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Topic</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">
                <div class="form-group">
                    <label>Topic Name: <input type="text" id="newTopicName" class="form-control"/></label>
                </div>
                <div class="form-group">
                    <label>Topic Description: <input type="text" id="newTopicDescription" class="form-control"/></label>
                </div>
                <p id="newTopicErr" class="invalid" hidden>Topic name & Topic description cannot be empty. Please try again.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAddTopic">Add Topic</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="blog" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="blogTopic"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center" style="height:100vh">
                <iframe id="blogPDF" src="" class="pdf">
                </iframe>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Upload new blog (popup only admins) -->
<div class="modal" id="upload" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Blog</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">

                <form id="uploadBlog" enctype="multipart/form-data" action="/api/uploadBlog" method="post">
                    <div class="form-group">
                        <input type="file" name="blog" id="fileUpload" />
                        <p id="blogErr" class="invalid" hidden>Blog already exists</p>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary margin" type="submit" value="Upload Blog" name="submit">
                    </div>
                </form>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Footer -->
<footer class="footer">
    <div class="container">
    </div>
    <a class="footerLogo" href="main">
        <img src="/icon-logo.png" alt="logo"/>
    </a>
    <div class="footerCopyright">
        <script type="text/javascript"> window.onload = function copyright(){
                document.getElementById("year").innerHTML = new Date().getFullYear();
            };
        </script>
        &copy; <span id="year"></span> Basic Blogs
    </div>
</footer>
<!-- Testing -->
<div id="mocha"></div>
<script src="https://unpkg.com/chai/chai.js"></script>
<script src="https://unpkg.com/mocha/mocha.js"></script>
<script class="mocha-init">
    mocha.setup('tdd');
</script>
<script src="../test/unit.js"></script>
<script class="mocha-exec">
    mocha.run();
</script>
</body>
</html>